@model IEnumerable<WebAssignment_2019_P03_Team06.Models.SentSuggestion>

<style>
    table {
        font-family: arial, sans-serif;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
    }
    }
</style>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Suggestion ID</th>
                    <th>To Student ID</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Date Created</th>
                    
                </tr>
            </thead>
            <tbody>
                
                @foreach (var item in Model)
                {
                   

                    
                    @if (item.LecturerId == Context.Session.GetInt32("LecturerId"))
                    {
                    <tr>
                        <td>@item.SuggestionId.ToString()</td>
                        <td>@item.StudentId</td>
                        <td>@item.Description</td>
                        <td>@item.Status</td>
                        <td>@item.DateCreated </td>

                       
                    </tr>
                    }
                    

                    
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No Sent Suggestion!</span>
}
